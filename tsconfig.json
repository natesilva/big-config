{
  "include": ["**/src", "**/test"],
  "exclude": ["**/node_modules", "**/build"],
  "compilerOptions": {
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true,
    "target": "ES2021",
    "outDir": "build",
    "module": "node16",
    "moduleResolution": "node16",
    "lib": ["ES2021"]
  }
}
